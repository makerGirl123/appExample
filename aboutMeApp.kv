#:kivy 2.3
<HomeScreen>:
    id: home
    HomeScreenCanvas:
        FloatLayout:
            Image:
                source: 'personal_portrait.png'
                allow_stretch: True
                keep_ratio: True
                size_hint_y: None
                size_hint_x: None
                width: self.parent.width
                height: self.parent.width/self.image_ratio
                pos_hint: {"center_x":0.5, "center_y":0.2}
            MDLabel:
                adaptive_size: True
                pos_hint: {"center_x":0.5, "center_y":0.8}
                text: "All About Me"
                padding: "4dp", "4dp"
                font_style: "H2"
            MDLabel:
                adaptive_size: True
                pos_hint: {"center_x":0.5, "center_y":0.7}
                text: "Mercy Wolverton"
                padding: "4dp", "4dp"
                font_style: "H4"

            MDRectangleFlatButton:
                adaptive_size: True
                pos_hint: {"center_x":0.5, "center_y":0.6}
                text: "My Hobbies"
                font_size: "20sp"
                on_press: app.root.current = 'hobbies'

            MDRectangleFlatButton:
                adaptive_size: True
                pos_hint: {"center_x":0.5, "center_y":0.55}
                text: "My Favorites"
                font_size: "20sp"
                on_press: app.root.current = 'favorites'

<HobbiesScreen>:
    id: hobbies
